        </setup>
      </task>

      <task id="P5_T3">
        <name>Connect Dashboard to Real-time Data</name>
        <datasources>
          <notion>Sync agent metrics from Metrics database</notion>
          <github>Real-time commit activity feed</github>
          <supabase>Voice command logs + execution status</supabase>
          <agent_apis>Direct polling of agent status endpoints</agent_apis>
