      </task>
    </phase>

    <phase id="PHASE_7" name="Voice Command Automation" duration="2 days" priority="MEDIUM">
      <objective>Enable fully hands-free operation via voice</objective>

      <task id="P7_T1">
        <name>Define Voice Command Library</name>
        <commands>
          <category name="Deployment">
