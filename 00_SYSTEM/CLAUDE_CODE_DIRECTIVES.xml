      </task>

      <task id="P5_T4">
        <name>Deploy Dashboard</name>
        <deployment>
          <host>Vercel (Frontend) + Railway (Backend)</host>
          <authentication>Supabase Auth + GitHub OAuth</authentication>
          <https>Auto-configured by Vercel</https>
          <domain>https://archon-x.pauli-effect.com (or custom)</domain>
        </deployment>
      </task>
    </phase>

    <phase id="PHASE_6" name="CLI Tools Integration" duration="2 days" priority="HIGH">
