<?xml version="1.0" encoding="UTF-8"?>
<claude_code_directive>
  <metadata>
    <version>1.0.0</version>
    <system_name>PAULI_SECOND_BRAIN_IMPLEMENTATION</system_name>
    <created>2025-12-21</created>
    <target_audience>Claude Code Builder Agent</target_audience>
    <objective>Execute comprehensive triple-sync architecture wiring</objective>
  </metadata>

  <execution_phases>
    <phase id="PHASE_1" name="Foundation Setup" duration="2 days" priority="CRITICAL">
      <objective>Create folder structure and initialize repositories</objective>
      
      <task id="P1_T1">
        <name>Clone Second Brain Repository</name>
        <command>git clone https://github.com/executiveusa/outlines-second-brain.git pauli-second-brain</command>
        <verification>
          <check>Directory exists: pauli-second-brain/</check>
          <check>Remote origin: github.com/executiveusa/outlines-second-brain</check>
        </verification>
      </task>

      <task id="P1_T2">
        <name>Create Master System Architecture Folder</name>
        <folder_structure>
          <folder path="pauli-second-brain/00_SYSTEM">
            <file>PAULI_ARCHITECTURE.md</file>
            <file>BYTEROVER_CONFIG.yml</file>
            <file>NOTION_SCHEMA.json</file>
            <file>GOOGLE_CLOUD_CONFIG.yaml</file>
            <file>pauli_parse_unstructured.py</file>
            <file>LLMS_MANIFEST.txt</file>
          </folder>
          <folder path="pauli-second-brain/01_PROJECTS">
            <folder>core_mission</folder>
            <folder>revenue_operations</folder>
            <folder>creative_ip</folder>
            <folder>ai_infrastructure</folder>
            <folder>training_education</folder>
            <file>project_index.json</file>
          </folder>
          <folder path="pauli-second-brain/02_DECISIONS">
            <file>decision_archive.json</file>
          </folder>
          <folder path="pauli-second-brain/03_AGENTS">
            <file>pauli_prime.md</file>
            <file>agents_manifest.json</file>
          </folder>
          <folder path="pauli-second-brain/04_SKILLS">
            <comment>18 Cloud Skills</comment>
          </folder>
          <folder path="pauli-second-brain/05_VOICE">
            <file>pauli_voice_persona.md</file>
          </folder>
        </folder_structure>
      </task>

      <task id="P1_T3">
        <name>Copy System Files to Repository</name>
        <files_to_copy>
          <source>00_SYSTEM/PAULI_ARCHITECTURE.md</source>
          <source>00_SYSTEM/BYTEROVER_CONFIG.yml</source>
          <source>00_SYSTEM/NOTION_SCHEMA.json</source>
          <source>00_SYSTEM/pauli_parse_unstructured.py</source>
          <destination>pauli-second-brain/00_SYSTEM/</destination>
        </files_to_copy>
      </task>

      <task id="P1_T4">
        <name>Initialize Git with Phase 1 Commit</name>
        <git_commands>
          <add>pauli-second-brain/00_SYSTEM/*</add>
          <commit>message: "üèóÔ∏è [PHASE_1] Initialize PAULI Second Brain architecture"</commit>
          <push>branch: master</push>
        </git_commands>
      </task>
    </phase>

    <phase id="PHASE_2" name="ByteRover + Notion Sync" duration="3 days" priority="CRITICAL">
      <objective>Wire triple-sync system connecting GitHub, Notion, Google Cloud</objective>

      <task id="P2_T1">
        <name>Validate Environment Variables</name>
        <required_env_vars>
          <var>GITHUB_TOKEN</var>
          <var>NOTION_API_KEY</var>
          <var>NOTION_WORKSPACE_ID</var>
          <var>GOOGLE_CLOUD_PROJECT_ID</var>
          <var>GOOGLE_CLOUD_CREDENTIALS_JSON</var>
          <var>GOOGLE_DRIVE_FOLDER_ID</var>
          <var>SUPABASE_URL</var>
          <var>SUPABASE_KEY</var>
        </required_env_vars>
        <action>Verify all variables set in environment. If missing, alert and wait for input.</action>
      </task>

      <task id="P2_T2">
        <name>Deploy ByteRover MCP Configuration</name>
        <setup>
          <install_package>byterover-mcp</install_package>
          <copy_config>BYTEROVER_CONFIG.yml ‚Üí ~/.byterover/config.yml</copy_config>
          <initialize_service>systemctl start byterover-mcp (or equivalent for OS)</initialize_service>
        </setup>
        <verification>
          <check>ByteRover service running</check>
          <check>Test sync: Create test file in GitHub, verify appears in Notion within 2 minutes</check>
        </verification>
      </task>

      <task id="P2_T3">
        <name>Create Notion Database Schema</name>
        <action>
          <use_api>Notion API</use_api>
          <payload>NOTION_SCHEMA.json</payload>
          <create_databases>Projects, Tasks, Agents, Skills, Decisions, Metrics, Voice_Commands</create_databases>
        </action>
        <output>
          <store_env>NOTION_PROJECTS_DB_ID</store_env>
          <store_env>NOTION_TASKS_DB_ID</store_env>
          <store_env>NOTION_AGENTS_DB_ID</store_env>
          <store_env>NOTION_SKILLS_DB_ID</store_env>
          <store_env>NOTION_DECISIONS_DB_ID</store_env>
          <store_env>NOTION_METRICS_DB_ID</store_env>
          <store_env>NOTION_VOICE_COMMANDS_DB_ID</store_env>
        </output>
      </task>

      <task id="P2_T4">
        <name>Configure Google Cloud Storage Backup</name>
        <setup>
          <create_bucket>pauli-second-brain-storage</create_bucket>
          <enable_versioning>true</enable_versioning>
          <set_retention>7 years (2555 days)</set_retention>
          <configure_access>Restricted to service account</configure_access>
        </setup>
      </task>

      <task id="P2_T5">
        <name>Test Triple-Sync Flow</name>
        <test_steps>
          <step id="1">Create project in Notion ‚Üí Verify GitHub commit within 2 min</step>
          <step id="2">Push markdown to GitHub ‚Üí Verify Notion database update within 15 min</step>
          <step id="3">Check Google Cloud backup ‚Üí Verify files present</step>
          <step id="4">Simulate conflict ‚Üí Verify GitHub wins (source of truth)</step>
        </test_steps>
        <success_criteria>All 4 steps pass</success_criteria>
      </task>
    </phase>

    <phase id="PHASE_3" name="Project Inventory Import" duration="2 days" priority="HIGH">
      <objective>Parse 100 projects from Google Drive and populate Notion</objective>

      <task id="P3_T1">
        <name>Run LLM-Text Parsing Pipeline</name>
        <command>python pauli_parse_unstructured.py --input /path/to/google_exports --output ./01_PROJECTS</command>
        <expected_output>PARSE_MANIFEST.json with conversion statistics</expected_output>
      </task>

      <task id="P3_T2">
        <name>Create Project Index JSON</name>
        <structure>
          <property>project_id (1-100)</property>
          <property>title</property>
          <property>category</property>
          <property>rating</property>
          <property>status</property>
          <property>github_path</property>
          <property>notion_db_id</property>
        </structure>
        <output>01_PROJECTS/project_index.json</output>
      </task>

      <task id="P3_T3">
        <name>Populate Notion Projects Database</name>
        <action>
          <iterate_over>project_index.json</iterate_over>
          <for_each>Create Notion database entry with all properties</for_each>
          <batch_size>50 entries per API call</batch_size>
        </action>
        <verification>
          <check>All 100 projects appear in Notion Projects database</check>
          <check>Related_Tasks links populated</check>
        </verification>
      </task>
    </phase>

    <phase id="PHASE_4" name="Agent Deployment" duration="3 days" priority="HIGH">
      <objective>Deploy 19 AI agents and wire into orchestration system</objective>

      <task id="P4_T1">
        <name>Define Agent Manifests</name>
        <agents>
          <agent id="PAULI_PRIME">
            <role>Master Orchestrator</role>
            <capabilities>Request routing, decision making, system oversight</capabilities>
            <deployment>Claude Code instance</deployment>
          </agent>
          <agent id="CLAUDE_CODE">
            <role>Builder/Executor</role>
            <capabilities>Code generation, task execution</capabilities>
            <deployment>Native Claude Code environment</deployment>
          </agent>
          <agent id="VALIDATOR">
            <role>Quality Review</role>
            <capabilities>Code review, testing, validation</capabilities>
            <deployment>Claude Code instance</deployment>
          </agent>
          <agent id="MICROSOFT_LIGHTNING">
            <role>Monitoring/Optimization</role>
            <capabilities>Performance tracking, learning, improvement</capabilities>
            <deployment>Azure Agent Framework</deployment>
          </agent>
          <agent id="VOICE_JARVIS">
            <role>Voice Interface</role>
            <capabilities>Speech recognition, voice commands, TTS</capabilities>
            <deployment>VAPI integration</deployment>
          </agent>
          <comment>14 more skill-based orchestrator agents defined similarly</comment>
        </agents>
        <output>03_AGENTS/agents_manifest.json</output>
      </task>

      <task id="P4_T2">
        <name>Wire Agent Orchestration System</name>
        <architecture>
          <pauli_prime>
            <listens_to>Voice commands, Notion updates, GitHub pushes</listens_to>
            <routes_to>Appropriate skill orchestrator agents</routes_to>
            <logs_to>Notion Decisions database</logs_to>
          </pauli_prime>
          <skill_orchestrators>
            <spawn_sub_agents>Based on task complexity</spawn_sub_agents>
            <coordinate>CrewAI swarms for parallel execution</coordinate>
            <report_back>Status to PAULI_PRIME</report_back>
          </skill_orchestrators>
          <validator>
            <monitors>All code output from CLAUDE_CODE</monitors>
            <triggers>Strict review workflows</triggers>
            <reports>Issues back for resolution</reports>
          </validator>
          <lightning>
            <tracks>Agent performance metrics</tracks>
            <stores>In Notion Metrics database</stores>
            <generates>Weekly improvement reports</generates>
          </lightning>
        </architecture>
      </task>

      <task id="P4_T3">
        <name>Implement Adversarial Agent Review System</name>
        <description>Coder vs Validator agents argue until optimal solution</description>
        <flow>
          <step>CLAUDE_CODE generates solution A</step>
          <step>VALIDATOR reviews strictly, identifies issues</step>
          <step>CLAUDE_CODE revises to solution B</step>
          <step>VALIDATOR validates again</step>
          <step>Loop until VALIDATOR approves or max iterations reached</step>
          <step>Log entire discussion to GitHub</step>
        </flow>
      </task>

      <task id="P4_T4">
        <name>Deploy Agents to Production</name>
        <deployment>
          <pauli_prime>Deploy to primary Claude Code instance</pauli_prime>
          <validator>Deploy secondary Claude Code instance</validator>
          <skill_orchestrators>Deploy as modular agents</skill_orchestrators>
          <lightning>Activate Azure Agent Framework monitoring</lightning>
          <jarvis>Initialize VAPI voice interface</jarvis>
        </deployment>
      </task>
    </phase>

    <phase id="PHASE_5" name="Dashboard & Voice UI" duration="3 days" priority="MEDIUM">
      <objective>Build ARCHON-X spaceship cockpit dashboard and voice interface</objective>

      <task id="P5_T1">
