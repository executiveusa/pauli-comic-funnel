{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "serve -s dist -l $PORT",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5
  },
  "plugins": []
}
